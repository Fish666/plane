<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.chinasoft.planeticket.mapper.FicketMapper">
  		<resultMap type="Ficket" id="ficketResults">
  			<id column="tid" property="tid"/>
  			<result column="tplace" property="tplace"/>
  			<result column="tdestination" property="tdestination"/>
  			<result column="tcabin" property="tcabin"/>
  			<result column="tDate" property="tDate"/>
  			<result  column="tseat" property="tseat"/>
  			<result column="tchidren" property="tchidren"/>
  			<result column="baby" property="baby"/>
  			<result column="tprice" property="tprice"/>
  			<result column="tname" property="tname"/>
  		</resultMap>
  		<!-- 添加 -->
  		<insert id="insertFicket">
  			insert into ticket (tplace,tdestination,tcabin,tDate,tseat,tchidren,baby,tprice,tname) 
  			values (#{tplace},#{tdestination},#{tcabin},#{tchidren},#{baby},#{tprice},#{tname})
  		</insert>
  		<!-- 删除 -->	
  			<delete id="deleteFicket">
  				delete from ticket where tname=#{tname};
  			</delete>
  			
  </mapper>