<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.bai.wen.Mavens.dao.AdmUserDao">
 	<resultMap type="admUser" id="admUserResult">
 		<id column="admid" property="admid"/>
 		<result column="admname" property="admname"/>
 		<result column="admpwd" property="admpwd"/>
 		<result column="admper" property="admper"/>
 	</resultMap>
 	
 	<select id="queryAdmUser" parameterType="user" resultMap="admUserResult"> 		
 		select * from t_users 
 		where admname=#{admname} and admpwd=#{admpwd} and admper=#{admper}
 	</select>
</mapper>